<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.general.activity.VolunteerLoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="Volunteer Login"
        android:textColor="#000000"
        android:textSize="28sp" />


    <EditText
        android:id="@+id/et_phno_volunteer_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textColor="#000000"
        android:hint="Your Phone Number"
        android:inputType="phone"
        android:textColorHint="#9595b7"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/et_password_volunteer_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:hint="Your password"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:textColorHint="#9595b7"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_volunteer_login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:text="login"

        android:textSize="15sp"

        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"/>
    <TextView
        android:id="@+id/tv_new_here_volunteer_login"
        android:layout_width="wrap_content"
        android:text="New Here?"

        android:textColor="#000000"
        android:layout_marginTop="20dp"

        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_createnewacc_volunteer_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:text="Create New Account"
        android:textSize="15sp"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        />


    <ProgressBar
        android:id="@+id/pb_volunteer_login"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content" />
</LinearLayout>


