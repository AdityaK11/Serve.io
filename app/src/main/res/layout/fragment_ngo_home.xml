<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/background"
    tools:context=".ui.NgoUser.fragment.NgoHomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/serve_logo"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp">
        </ImageView>

        <TextView
            android:textSize="24sp"
            android:gravity="center"
            android:text="NGO Name"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_ngo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_ngo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Location"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_ngo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/ngo_payment_info"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_upi"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:visibility="visible" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/et_upi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:hint="Eg. okicici@92"
            android:visibility="invisible" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_add_upi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Add Now"
            android:visibility="invisible"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Not you?"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <Button
                android:layout_margin="16dp"
                android:id="@+id/btn_logout_ngo"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_button"
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>
    </LinearLayout>

</ScrollView>