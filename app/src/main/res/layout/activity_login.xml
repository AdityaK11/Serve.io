<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.general.activity.LoginActivity">


    <TextView
        android:id="@+id/tv_welcome_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to Serve.io!" />

    <Button
        android:id="@+id/btn_login_as_volunteer"
        android:layout_marginTop="120dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Login as Volunteer" />

    <Button
        android:id="@+id/btn_login_as_ngo"
        android:layout_marginTop="32dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Login as NGO" />

    <TextView
        android:id="@+id/tv_new_here"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:text="New here?" />

    <Button
        android:id="@+id/btn_register_if_new"
        android:layout_marginTop="8dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Register" />

    <ProgressBar
        android:id="@+id/pb_login_activity"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content" />

</LinearLayout>