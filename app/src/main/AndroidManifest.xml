<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spoton.serveio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.general.activity.RegisterActivity"></activity>
        <activity android:name=".ui.general.activity.LoginActivity" />
        <activity
            android:name=".ui.VolunteerUser.activity.VolunteerHomeActivity"
            android:label="@string/title_activity_volunteer_home" />
        <activity
            android:name=".ui.NgoUser.activity.NgoHomeActivity"
            android:label="@string/title_activity_ngo_home" />
        <activity android:name=".ui.general.activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>